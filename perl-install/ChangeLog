	#!/usr/bin/perl
	
	use strict;
	use lib qw(/usr/lib/libDrakX);
	
	use standalone;
	use bttv;
	use interactive;
	use modules;
	
	modules::read_conf;
	bttv::config('interactive'->vnew());
	modules::write_conf;
	spec29: bttv configuration part of drakxtv.
