use diagnostics;
use strict;

BEGIN {
    #- for testing purpose
    (my $f = __FILE__) =~ s|install2$|list_modules.pm|;
    -e $f or symlink '../kernel/list_modules.pm', $f;
}

use lib qw(/usr/bin/perl-install .);
use install2;

$::testing = $ENV{PERL_INSTALL_TEST};
$::isStandalone = 0;

install2::main(@ARGV);

c::_exit(0);
