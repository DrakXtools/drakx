my $red      = my_gtk::gtkcolor(0xFFFF, 655, 655);
my $green    = my_gtk::gtkcolor(0x0, 0x9898,0x0);
my $yellow   = my_gtk::gtkcolor(0xFFFF, 0xD7D7, 0);
my $blue     = my_gtk::gtkcolor(655, 655, 0xFFFF);
