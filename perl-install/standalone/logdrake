    no warnings;
    sub _ {
	my $s = shift @_; my $t = translate($s);
	sprintf $t, @_;
    }

    no warnings;
    sub translate {
	my ($s) = @_;
	$s ? c::dgettext('drakconf', $s) : '';
    }
}

